@model StreetFighter.Web.Models.FichaTecnicaModel
@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .fidel-validation-error {
            background-color: red;
        }
    </style>
</head>
<div id="titulo">
    <h1>
        Cadastro
    </h1>
</div>
<div class="corpo">
    <h3>@ViewBag.Mensagem</h3>

    @using (Html.BeginForm("Cadastro", "StreetFighter", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Imagem)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "col-sm 2 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nascimento, new { @class = "col-sm 2 control-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.Nascimento, "{0: d MMM yyyy}", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nascimento)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Altura, new { @class = "col-sm 2 control-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Altura, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Altura)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Peso, new { @class = "col-som 2 control-label" })
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Peso, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Peso)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GolpesEspeciaisFamosos, new { @class = "col-sm 2 control-label" })
            <div class="col-sm-5">
                @Html.TextBoxFor(model => model.GolpesEspeciaisFamosos)
                @Html.ValidationMessageFor(model => model.GolpesEspeciaisFamosos)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Oculto, new { @class = "col-sm 2 control-label" })
            <div class="col-sm-2">
                @Html.CheckBoxFor(model => model.Oculto)
                @Html.ValidationMessageFor(model => model.Oculto)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Origem, new { @class = "col-sm 2 control-label" })
            <div class="col-sm-3">
                @Html.DropDownListFor(model => model.Origem, (IEnumerable<SelectListItem>)ViewBag.ListaOrigem, "Origem.", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Origem)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Salvar</button>
            </div>
        </div>
    }

    <script src="~/scripts/jquery-1.9.1.js"></script>
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>

    <script type="text/javascript">
        $.validator.methods.number = function (value, element) {
            var regex = /^(\d*)(\,\d{1,2})?$/;
            return this.optional(element) || regex.test(value);
        }

        $.validator.methods.date = function (valeu, element) {
            var date = new Date(value.replace(/(d{2})[/](\d{2})[/](\d{4})/, "$2/$1/$3"));
            return this.optional(element) || !/Invalid|NaN/.test(date.toString());
        }
    </script>
</div>