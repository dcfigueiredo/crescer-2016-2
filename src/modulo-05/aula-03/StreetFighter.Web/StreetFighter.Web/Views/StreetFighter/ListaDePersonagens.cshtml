@model List<StreetFighter.Dominio.Personagem>
@{
    ViewBag.Title = "ListaDePersonagens";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="titulo">
    <h1>
        Lista de Personagens
    </h1>
</div>
<div class="corpo">
    @using (Html.BeginForm("ListaDePersonagens", "StreetFighter", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.Label("Filtro:", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("filtroNome", "", new { @class = "form-control", placeholder = "Nome..." })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Filtrar</button>
            </div>
        </div>
    }

    @{
        foreach (var personagem in Model)
        {
            <div class="personagem">
                @Html.ActionLink(personagem.Nome, "FichaTecnica", "StreetFighter", new { idPersonagem = personagem.Id }, null)
            </div>
        }
    }
</div>
