@{
    ViewBag.Title = "FichaTecnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="titulo">
    <h1>
        Ficha-Técnica
    </h1>
</div>


<div class="corpo" id="blanka">
    <h2>@Model.Nome</h2>
    <p class="ficha-tecnica">
        <strong>Nascimento:</strong> @Model.Nascimento.Day/@Model.Nascimento.Month/@Model.Nascimento.Year.<br>
        <strong>Altura:</strong> @Model.Altura cm<br>
        <strong>Peso:</strong> @Model.Peso kg<br>
        <strong>Origem:</strong> @Model.Origem.<br>
        <strong>Golpes especiais famosos:</strong>@Model.GolpesEspeciaisFamosos<br>
        <strong>Personagem Oculto:</strong>
        @{
            if (Model.Oculto == false)
            {
                <text>Não.</text>
            }
            else
            {
                <text>Sim.</text>
            }
        }
    </p>
</div>